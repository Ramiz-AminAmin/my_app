<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textButton"
        android:src="@drawable/aminamin"/>

    <TextView
        android:id="@+id/textButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintBottom_toTopOf="@id/buttonFor"
        android:text="@string/button_text"
        android:textColor="#000000"
        android:textSize="30sp" />

    <Button
        android:id="@+id/buttonFor"
        android:layout_width="150dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonSelector"
        app:layout_constraintTop_toBottomOf="@id/textButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/button_text"
        android:onClick="onClick"
        android:textColor="@color/black"
        android:background="@color/teal_200"/>

    <Button
        android:id="@+id/buttonSelector"
        android:layout_width="250dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toEndOf="@id/buttonFor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/button_on_off" />

</androidx.constraintlayout.widget.ConstraintLayout>